{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["es2021"],
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": ["src/**/*", "test/**/*.ts"],
  "exclude": ["./node_modules/*", "dist"]
}
